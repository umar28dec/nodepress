<% if ( have_posts.length > 0 ){ %>

<% have_posts.forEach(function(ele,index){ %>	

<div class="panel panel-primary"> 				
 		<div class="panel-heading">
		<a href="<%- ele.post_url %>" class="hlink" style=" "> <%- ele.post_title %></a>
	</div>
	<div class="panel-body"> 
		<%- ele.post_teaser %>
	</div>

	<a href="<%-  ele.post_url %>" class="btn fa fa-arrow-right " > <%- ele.post_excerpt %></a>


	<% if(ele.post_views>0) {%> 
	<!--[Comment Counter - Start]-->
	<span style=" padding:3px;font-size: 15px;" class="fa fa-eye" title="Total Views"> <%- ele.post_views %> </span>
	<!--[Comment Counter - Start]-->						
	<%} %>


	<% if(ele.comment_counter>0 &&  (ele.comments_allow).toLowerCase() =='yes') {%> 
	<!--[Comment Counter - Start]-->
	<span style=" padding:3px;font-size: 15px;" class="fa fa-commenting-o" title="Total Comments"> <%- ele.comment_counter %> </span>
	<!--[Comment Counter - Start]-->						
	<%} %>


	<br><br>
</div>

 	<%}) %>

<% }else if(have_posts.length < 1){ %>

<!--[If no content, include the "No posts found" template.]-->
 <h1>No posts found</h1>

<%} %> 